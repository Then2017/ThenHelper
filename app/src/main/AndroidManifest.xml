    <!-- 获取日记 -->
    <!-- <uses-permission android:name="android.permission.READ_LOGS" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ico"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" > <!-- 禁止转屏 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Message -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </activity>
        <!-- BroadcastReceiver that listens for incoming MMS messages -->
        <receiver
            android:name="com.addcontacts.SmsReceiver"
            android:permission="android.permission.BROADCAST_SMS" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_DELIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.addcontacts.WapPushReceiver"
            android:permission="android.permission.BROADCAST_WAP_PUSH" >
            <intent-filter>
                <action android:name="android.provider.Telephony.WAP_PUSH_DELIVER" />

                <data android:mimeType="application/vnd.wap.mms-message" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.addcontacts.MmsService"
            android:exported="true"
            android:permission="android.permission.SEND_RESPOND_VIA_MESSAGE" >
            <intent-filter>
                <action android:name="android.intent.action.RESPOND_VIA_MESSAGE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="sms" />
                <data android:scheme="smsto" />
                <data android:scheme="mms" />
                <data android:scheme="mmsto" />
            </intent-filter>
        </service>
        <!-- Sensor float windows -->
        <service android:name="com.sensor.SensorService" >
            <intent-filter>
                <action android:name="com.sensor.SensorService" />
            </intent-filter>
        </service>
        <!-- floatinfo windows -->
        <service android:name="com.floatinfo.FloatinfoService" >
            <intent-filter>
                <action android:name="com.floatinfo.FloatinfoService" />
            </intent-filter>
        </service>
        <!-- battery service -->
        <service
            android:name="com.battery.BatteryService"
            android:enabled="true"
            android:exported="true"
            android:priority = "1000">
            <intent-filter>
                <action android:name="com.battery.BatteryService" />
            </intent-filter>
        </service>
        <!-- gifgame service -->
        <service
            android:name="com.assistant.GIFgame"
            android:enabled="true"
            android:exported="true"
            android:priority = "1000">
            <intent-filter>
                <action android:name="com.assistant.GIFgame" />
            </intent-filter>
        </service>
        <!-- screenrecord service -->
        <service
            android:name="com.screenrecord.ScreenRecordService"
            android:enabled="true"
            android:exported="true"
            android:priority = "1000">
            <intent-filter>
                <action android:name="com.screenrecord.ScreenRecordService" />
            </intent-filter>
        </service>
        <!-- screenrecord float service -->
        <service
            android:name="com.screenrecord.RecordFloatService"
            android:enabled="true"
            android:exported="true"
            android:priority = "1000">
            <intent-filter>
                <action android:name="com.screenrecord.RecordFloatService" />
            </intent-filter>
        </service>
        <!-- Doodle float service -->
        <service
            android:name="com.screenrecord.DoodleService"
            android:enabled="true"
            android:exported="true"
            android:priority = "1000">
            <intent-filter>
                <action android:name="com.screenrecord.DoodleService" />
            </intent-filter>
        </service>

        <!-- brodcast shutdown -->
        <receiver android:name="com.main.thenhelper.MainActivity$PlaceholderFragment$ShutdownReceiver" >
            <intent-filter>
                <!-- 关机广播 -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <!--  achartengine-1.1.0  -->
        <activity android:name="org.achartengine.GraphicalActivity"/>
        <!-- 各种屏幕支持  -->
        <supports-screens
            android:smallScreens="true"
            android:normalScreens="true"
            android:largeScreens="true"
            android:resizeable="true"
            android:anyDensity="true"/>
