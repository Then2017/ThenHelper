<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Show"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ant.liao.GifView android:id="@+id/gif1"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="1"
                android:visibility="visible" />

            <com.ant.liao.GifView android:id="@+id/gif2"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/gif1"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="2"
                android:visibility="visible" />

            <com.ant.liao.GifView android:id="@+id/gif3"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/gif2"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="3"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ant.liao.GifView android:id="@+id/gif4"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_below="@+id/gif1"
                android:layout_alignParentStart="true"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="1"
                android:visibility="visible" />

            <com.ant.liao.GifView android:id="@+id/gif5"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_below="@+id/gif2"
                android:layout_toEndOf="@+id/gif4"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="2"
                android:visibility="visible" />

            <com.ant.liao.GifView android:id="@+id/gif6"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:enabled="false"
                android:layout_below="@+id/gif3"
                android:layout_toEndOf="@+id/gif5"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_column="3"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="More"
                android:id="@+id/Show"
                android:textSize="9dp"
                android:textColor="#000000"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Color"
                android:id="@+id/ChangeColor"
                android:textSize="9dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Show"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Close"
                android:id="@+id/Close"
                android:textSize="9dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ChangeColor"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif1num"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_above="@+id/gif4"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/gif2num"
                android:layout_below="@+id/Close"
                android:layout_column="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif2num"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/gif4"
                android:layout_toEndOf="@+id/gif1"
                android:textColor="#000000"
                android:layout_column="2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif3num"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/gif3"
                android:layout_toEndOf="@+id/gif2"
                android:layout_above="@+id/gif5"
                android:textColor="#000000"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif4num"
                android:textStyle="bold"
                android:layout_below="@+id/gif1"
                android:visibility="gone"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/gif2"
                android:textColor="#000000"
                android:layout_column="1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif5num"
                android:textStyle="bold"
                android:layout_alignTop="@+id/gif4num"
                android:layout_alignStart="@+id/gif2num"
                android:visibility="gone"
                android:textColor="#000000"
                android:layout_column="2" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\?\?\?"
                android:id="@+id/gif6num"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_below="@+id/gif3"
                android:layout_alignBottom="@+id/gif5"
                android:layout_alignEnd="@+id/gif3"
                android:layout_toEndOf="@+id/gif2"
                android:textColor="#000000"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>

</RelativeLayout>