<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="#00F5FF">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Moretable"
        android:layout_below="@+id/ScreenRecordtitle"
        android:layout_toEndOf="@+id/Show">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Start"
                android:id="@+id/Start"
                android:textSize="9dp"
                android:textColor="#000000"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/Moretable"
                android:layout_toEndOf="@+id/Show"
                android:layout_column="0" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Color"
                android:id="@+id/ChangeColor"
                android:textSize="9dp"
                android:textColor="#000000"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Start"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Draw"
                android:id="@+id/Draw"
                android:textSize="9dp"
                android:textColor="#000000"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ChangeColor"
                android:layout_column="2" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Close"
                android:id="@+id/Close"
                android:textSize="9dp"
                android:textColor="#000000"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Draw"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="More"
        android:id="@+id/Show"
        android:textSize="9dp"
        android:textColor="#000000"
        android:visibility="visible"
        android:textStyle="bold"
        android:layout_column="0"
        android:layout_below="@+id/ScreenRecordtitle"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ScreenRecord"
        android:id="@+id/ScreenRecordtitle"
        android:layout_column="0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>